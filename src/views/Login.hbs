<!-- PUBLIC VIEW -->
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Iniciar sesión</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="api-base-url" content="{{baseUrl}}">
    <link rel="stylesheet" href="/css/{{css}}.css">
</head>

<body>
    <div class="form-container">
        <h2>Iniciar sesión</h2>
        <hr>
        <form id='form-login'>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email-field" class="input-field" name="email" placeholder="Introduce tu email" required>
            </div>
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" id="password-field" class="input-field" name="password" placeholder="Introduce tu contraseña" required>
            </div>
            <button id="login-btn" type="submit">Iniciar sesión</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script type="module" src="/js/service/RequestService.js"></script>
    <script type="module" src="/js/Login.js"></script>
</body>

</html>